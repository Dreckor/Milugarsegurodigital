<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".how_do_you_feel"
    android:background="@mipmap/recurso_6mdpi"
    android:gravity="top|center"
    android:orientation="vertical">

    <include layout="@layout/actionbar2" />

    <ImageView
        android:id="@+id/next_dialog"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="-70dp"
        android:layout_marginBottom="-20dp"
        android:contentDescription="@string/before_start"
        android:src="@mipmap/estas_listo_sigamosmdpi"></ImageView>
    <include layout="@layout/caritas" ></include>
    <EditText
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:background="@mipmap/que_dice_tu_cuerpomdpi"
        android:padding="15dp"></EditText>
    <EditText
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:background="@mipmap/que_dice_tu_mentemdpi"
        android:padding="15dp"></EditText>


    <ImageView
        android:id="@+id/breath_desc"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_gravity="left"
        android:src="@mipmap/describetemdpi"
        android:contentDescription="@string/before_start"></ImageView>



</LinearLayout>